{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./tmp",
    "declaration": false,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "downlevelIteration": true
  },

  "include": [
    "src/**/*"
  ]
}
